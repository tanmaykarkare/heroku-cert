{
  "name": "heroku-cert",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "watch-node": "nodemon --exec \"heroku local\" --signal SIGTERM",
    "watch-ts": "tsc -w",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "echo \"Warning: no test specified\" && exit 0",
    "watch": "npm run build && concurrently 'npm:watch-ts' 'npm:watch-node'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "export CI=true && npm run build && lint-staged && npm test",
      "pre-push": "export CI=true && npm run build && lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/helmet": "0.0.47",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0"
  },
  "engines": {
    "node": "12.16.2"
  }
}
